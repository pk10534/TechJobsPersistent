@model List<TechJobsPersistent.Models.Employer>

<h1>Employers Currently Hiring</h1>

@if (Model.Count == 0)
{
    <p>No employers are currently hiring</p>
}
else
{
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Name</th>
                <th scope="col">Location</th>>
                <th scope="col">About</th>>
            </tr>
        </thead>
        <tbody>
            @foreach (Employer employer in Model)
            {
                <tr>
                    <td>@employer.Id</td>
                    <td>@employer.Name</td>
                    <td>@employer.Location</td>
                    <td><a asp-controller="Employer" asp-action="About" asp-route-id="atemployer.Id">Learn More</a></td> 

                </tr>
            }
        </tbody>
    </table>
}


